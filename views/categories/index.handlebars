<div class="card">
    <div class="card-header">
        <h4>Categories</h4>
    </div>
    <div class="card-body">
        <ul class="list-group">
            {{#each categories}}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-6">
                        <h5 class="mt-1">{{name}}</h5>
                    </div>
                    <div class="col-6 text-end">
                        <a href="/categories/{{slug}}">
                            <button class="btn btn-success">See posts</button>
                        </a>
                    </div>
                </div>
            </li>

            {{else}}
            <h4 class="mt-3">No category registered.</h4>
            {{/each}}
        </ul>
    </div>
</div>