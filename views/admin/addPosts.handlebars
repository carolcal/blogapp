<div class="card">
    <div class="card-body">
        
        {{#each errors}}
            <div class="alert alert-danger">{{text}}</div>
        {{else}}

        {{/each}}

        <h4>New Post</h4>
        <form action="/admin/posts/nova" method="POST">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" required>
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" required>
            <label for="description">Description:</label>
            <input type="text" name="description" class="form-control" required>
            <label for="conteudo">Content:</label>
            <textarea type="text" name="conteudo" class="form-control" required></textarea>
            <label for="category">Category:</label>
            <select name="category" class="form-select" required>
                {{#each categories}}
                <option value={{_id}}>{{name}}</option>
                {{else}}
                <option value="0">No category registred</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Create post</button>
        </form>
    </div>
</div>