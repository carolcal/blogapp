<div class="row">
    {{#each options}}
    <div class="col-4 p-2">
        <div class="card text-bg-light" id="{{id}}">
            <div class="card-body">
                <div class="row g-0">
                    <div class="col-6 mt-1">
                        <h5>{{name}}</h5>
                    </div>
                    <div class="col-6 text-end">
                        <a href="{{route}}">
                            <button class="btn btn-warning">Manage</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {{/each}}
</div>