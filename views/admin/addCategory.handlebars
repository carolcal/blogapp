<div class="card">
    <div class="card-body">

        {{#each errors}}
            <div class="alert alert-danger">{{text}}</div>
        {{else}}

        {{/each}}

        <h5 class="card-title">New Category</h5>
        <form action="/admin/categories/nova" method="POST">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Category's Name" class="form-control">
            <label for="slug" class="mt-2">Slug</label>
            <input type="text" id="slug" name="slug" placeholder="Category's Slug" class="form-control">
            <button type="submit" class="btn btn-success mt-2">Criar Category</button>
        </form>
    </div>
</div>