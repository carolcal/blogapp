<div class="row">
    <div class="col-6">
        <h2>Posts List</h2>
    </div>
    <div class="col-6 text-end">
        <a href="/admin/posts/add">
            <button class="btn btn-success">New Post</button>
        </a>
    </div>
</div>
<hr>
<div class="row">
    {{#each posts}}
    <div class="col-6">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h4>{{title}}</h4>
            </div>
            <div class="card-body">
                <p>Description: {{description}}</p>
                <a href="/admin/posts/edit/{{_id}}">
                    <button class="btn btn-success mt-2">Edit</button>
                </a>
                <a href="/admin/posts/delete/{{_id}}">
                    <button class="btn btn-danger mt-2">Delete</button>
                </a>
            </div>
            <div class="card-footer">
                <small>Publish Date: {{date}}</small>
                <br>
                <small>Category: {{category.name}}</small>
            </div>
        </div>

    </div>
    {{else}}
    <h5 class="mt-3">No post registered.</h5>
    {{/each}}

</div>