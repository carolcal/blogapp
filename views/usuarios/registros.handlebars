<div class="card">
    <div class="card-header">
        <h4 class="text-center mt-1">Crie sua Conta</h4>
    </div>
    <div class="card-body">

        {{#each erros}}
            <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <form action="" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" class="form-control mb-2" required>
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control mb-2" required>
            <label for="senha">Senha:</label>
            <input type="password" name="senha" class="form-control mb-2" required>
            <label for="senha2">Repita a Senha:</label>
            <input type="password" name="senha2" class="form-control mb-2" required>
            <button type="submit" class="btn btn-success mt-2">Criar Conta</button>
        </form>
    </div>
</div>